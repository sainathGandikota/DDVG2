<h1>Editing transaction</h1>

<%= error_messages_for :transaction %>

<% form_for(@transaction) do |f| %>
  <p>
    <b>Effective</b><br />
    <%= f.datetime_select :effective %>
  </p>

  <p>
    <b>Discontinue</b><br />
    <%= f.datetime_select :discontinue %>
  </p>

  <p>
    <b>Price 087</b><br />
    <%= f.text_field :price_087 %>
  </p>

  <p>
    <b>Price 089</b><br />
    <%= f.text_field :price_089 %>
  </p>

  <p>
    <b>Price 091</b><br />
    <%= f.text_field :price_091 %>
  </p>

  <p>
    <b>Updated by</b><br />
    <%= f.text_field :updated_by %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @transaction %> |
<%= link_to 'Back', transactions_path %>
